{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "jest.config.js"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
